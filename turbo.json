{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["build:clear", "build:script", "build:declaration"],
			"outputs": ["dist/**"]
		},
		"build:clear": {
			"cache": false
		},
		"build:declaration": {
			"dependsOn": ["build:script"],
			"outputs": ["dist/**"]
		},
		"build:script": {
			"dependsOn": ["build:clear"],
			"outputs": ["dist/**"]
		},
		"lint": {
			"inputs": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.ts", "test/**/*.tsx", "biome.jsonc"]
		},
		"test:unit": {
			"inputs": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.ts", "test/**/*.tsx", "vitest.config.ts"]
		},
		"type-check": {
			"inputs": ["src/**/*.ts", "src/**/*.tsx", "tsconfig.json"]
		}
	}
}
